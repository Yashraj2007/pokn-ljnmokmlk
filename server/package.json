{
  "name": "pmis-smartmatch-plus",
  "version": "1.0.0",
  "description": "Backend API for PMIS SmartMatch+ internship management system",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js --watch src --ext js,json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "seed:internships": "node scripts/seed_internships.js",
    "seed:candidates": "node scripts/seed_candidates.js",
    "seed:all": "npm run seed:internships && npm run seed:candidates",
    "train": "node src/ml/train.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f backend",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "debug": "nodemon --inspect src/index.js"
  },
  "keywords": [
    "internship",
    "matching",
    "ml",
    "api",
    "pmis",
    "node",
    "express",
    "mongodb"
  ],
  "author": "Yashraj Chavan <yashraj@pmis.com>",
  "license": "MIT",
  "dependencies": {
    "@tensorflow/tfjs": "^4.22.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "fuse.js": "^6.6.2",
    "googleapis": "^128.0.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^7.6.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "natural": "^6.8.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "pino": "^8.16.1",
    "pino-pretty": "^10.2.3",
    "rate-limiter-flexible": "^4.0.1",
    "redis": "^4.6.10",
    "twilio": "^4.19.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "cross-env": "^7.0.3",
    "eslint": "^8.52.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**",
      "!src/index.js",
      "!src/config/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.test.js"
    ],
    "verbose": true
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,json",
    "ignore": [
      "tests/**",
      "node_modules/**"
    ],
    "exec": "node src/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Yashraj2007/pminternn.git"
  },
  "bugs": {
    "url": "https://github.com/Yashraj2007/pminternn/issues"
  },
  "homepage": "https://github.com/Yashraj2007/pminternn#readme"
}
